<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp">

    <RelativeLayout
        android:id="@+id/relTambahKos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/tvNamaTambahKos"
            style="@style/text18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/nama_kos" />

        <EditText
            android:id="@+id/edtNamaTambahKos"
            style="@style/text18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvNamaTambahKos"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/tvNamaTambahKos"
            android:hint="@string/nama_kos" />

        <TextView
            android:id="@+id/tvAlamatTambahKos"
            style="@style/text18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaTambahKos"
            android:layout_marginTop="15dp"
            android:text="@string/alamat" />

        <EditText
            android:id="@+id/edtAlamatTambahKos"
            style="@style/text18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvAlamatTambahKos"
            android:layout_alignLeft="@+id/edtNamaTambahKos"
            android:layout_toRightOf="@+id/tvAlamatTambahKos"
            android:hint="@string/alamat" />

        <TextView
            android:id="@+id/tvNoTelpnTambahKos"
            style="@style/text18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAlamatTambahKos"
            android:layout_marginTop="15dp"
            android:text="@string/no_telpon" />

        <EditText
            android:id="@+id/edtNoTelpnTambahKos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvNoTelpnTambahKos"
            android:layout_alignLeft="@+id/edtNamaTambahKos"
            android:layout_toRightOf="@+id/tvNoTelpnTambahKos"
            android:hint="@string/no_telpon" />

        <TextView
            android:id="@+id/tvJenisTambahKos"
            style="@style/text18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNoTelpnTambahKos"
            android:layout_marginTop="15dp"
            android:text="@string/jumlah_kamar" />

        <!-- edit by milyun -->

        <EditText
            android:id="@+id/edtJumlahKosTambahKos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvJenisTambahKos"
            android:layout_alignLeft="@+id/edtNamaTambahKos"
            android:layout_toRightOf="@+id/tvJenisTambahKos"
            android:hint="@string/jumlah_kamar" />

        <TextView
            android:id="@+id/tvHargaSewaTambahKos"
            style="@style/text18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvJenisTambahKos"
            android:layout_marginTop="15dp"
            android:text="@string/harga_sewa" />

        <TextView
            android:id="@+id/tvFasilitasTambahKos"
            style="@style/text18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHargaSewaTambahKos"
            android:layout_marginTop="15dp"
            android:text="@string/fasilitas_kos" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtJumlahKosTambahKos"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvHargaSewaTambahKos" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonSimpanTambahKos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/buttonBatalTambahKos"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/simpan" />

    <Button
        android:id="@+id/buttonBatalTambahKos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonSimpanTambahKos"
        android:layout_alignBottom="@+id/buttonSimpanTambahKos"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/batal" />

    <CheckBox
        android:id="@+id/checkMeja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkLemari"
        android:text="@string/meja_belajar" />

    <CheckBox
        android:id="@+id/checkLemari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkTempatTidur"
        android:text="@string/lemari" />

    <CheckBox
        android:id="@+id/checkAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkKamarMandi"
        android:layout_below="@+id/checkKamarMandi"
        android:text="@string/ac" />

    <CheckBox
        android:id="@+id/checkWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkAC"
        android:layout_below="@+id/checkAC"
        android:text="@string/wifi" />

    <CheckBox
        android:id="@+id/checkTempatTidur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relTambahKos"
        android:text="@string/tempat_tidur" />

    <CheckBox
        android:id="@+id/checkKamarMandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkLemari"
        android:layout_toRightOf="@+id/checkMeja"
        android:text="@string/kamar_mandi_dalam" />

</RelativeLayout>
